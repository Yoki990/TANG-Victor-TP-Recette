@model List<Recipe>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Formulaire Recette - Projet_Final_TANG_Victor</title>
</head>
<body>
    <div>
        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="box">
                <p>Recette n°@i</p>
                <ul>
                    <li class="RecipeTitle">@Model[i].Title</li>
                    <li class="RecipeDescription">@Model[i].Description</li>
                    <li class="RecipeInstruction">@Model[i].Instruction</li>
                    <li class="RecipeAuthor">@Model[i].Author</li>
                </ul>

                <a asp-controller="Recipe" asp-action="UpdateRecipeForm" asp-route-id="@i">
                    <img src="https://tse1.mm.bing.net/th/id/OIP.cZtQ4BkboEqUvDV9USeo9gAAAA?rs=1&pid=ImgDetMain&o=7&rm=3"
                         style="float:right; margin-left:10px; margin-top:-8em; width: 3em;" />
                </a>



                <a asp-area="" asp-controller="Recipe" asp-action="DeleteRecipe" asp-route-id="@i">
                    <img src="https://st4.depositphotos.com/20524830/26021/i/450/depositphotos_260218458-stock-photo-trash-can-icon-primitive-set.jpg"
                         style="float:right; margin-left:10px; margin-top:-4em; width: 3em;" />
                </a>
            </div>
        }
    </div>
    <hr>
</body>
</html>
