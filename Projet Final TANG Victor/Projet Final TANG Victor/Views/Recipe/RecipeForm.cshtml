@model Recipe

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Formulaire Création Recette - Projet_Final_TANG_Victor</title>

</head>
<body>
    <div>
        <form asp-action="TreatForm" method="post">
            <br>
            <div>
                <label asp-for="Title"></label>
                <input asp-for="Title" />
                <span asp-validation-for="Title"></span>
            </div>
            <br>
            <div>
                <span>Description</span>
                
                <textarea asp-for="Description"  rows="4" cols="100"> </textarea>
                <span asp-validation-for="Description"></span>
            </div>
            <br>
            <div>
                <span>Instructions</span>
                
                <textarea asp-for="Instruction" rows="4" cols="100"> </textarea>
                <span asp-validation-for="Instruction"></span>
            </div>
            <br>
            <div>
                <span>Auteur</span>
                <input asp-for="Author" />
                <span asp-validation-for="Author"></span>
            </div>
            <br>
            <button type="submit">Envoyer</button>
        </form>
    </div>
    <hr>
</body>
</html>
