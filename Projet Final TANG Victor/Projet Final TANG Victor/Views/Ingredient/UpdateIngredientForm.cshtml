@model Ingredient

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Formulaire Modification Ingrédient - Projet_Final_TANG_Victor</title>

</head>
<body>
    <div>
        <form id="Id" asp-action="UpdateTreatForm" method="post">
             
            <div>
                <label asp-for="Name">Nom</label>
                <input asp-for="Name" />
                <span asp-validation-for="Name"></span>
            </div>
            <div>
                <label asp-for="Category">Catégorie</label>
                <input asp-for="Category" />
                <span asp-validation-for="Category"></span>
            </div>

            <button type="submit">Mettre à jour</button>
        </form>
    </div>
</body>
</html>
