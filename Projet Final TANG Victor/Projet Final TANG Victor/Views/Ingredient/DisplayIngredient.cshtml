@model List<Ingredient>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Formulaire Ingredient - Projet_Final_TANG_Victor</title>

</head>
<body>

    <table name="Ingredients" id="ingredient">
        <thead>
            <tr>
                <th style="width:10em;"> Id </th>
                <th style="width:20em;"> Ingrédient </th>
                <th style="width:20em;"> Catégorie </th>
                <th colspan="2"> Action </th>
            </tr>
        </thead>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tbody>
                <tr>
                    <td id="element">@(i+1)</td>
                    <td id="element">@Model[i].Name.Trim()</td>
                    <td id="element">@Model[i].Category.Trim()</td>
                    <td id="element">
                        <a asp-controller="Ingredient" asp-action="UpdateIngredientForm" asp-route-id="@i">
                            <img src="https://png.pngtree.com/png-vector/20230209/ourmid/pngtree-notebook-icon-png-image_6591697.png" alt="Modification"
                                 style="width: 3em;" />
                        </a>
                    </td>
                    <td id="element">
                        <a asp-area="" asp-controller="Ingredient" asp-action="DeleteIngredient" asp-route-id="@i">
                            <img src="https://toppng.com/public/uploads/preview/big-trash-can-vector-trash-can-icon-1156305906701r6eta2fm.png" alt="Supprimer"
                                 style="width: 3em;" />
                        </a>

                    </td>
                </tr>
            </tbody>
        }
        
    </table>
     <a asp-area="" asp-controller="Ingredient" asp-action="IngredientForm" id="Ajout">Ajouter un ingrédient</a>
    <hr>
</body>
</html>